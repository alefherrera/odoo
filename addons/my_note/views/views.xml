<?xml version="1.0"?>
<odoo>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="my_note.list">
      <field name="name">myNote list</field>
      <field name="model">my_note.my_note</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="memo"/>
        </tree>
      </field>
    </record>

    <record id="view_note_note_form" model="ir.ui.view">
        <field name="name">my_note.my_note.form</field>
        <field name="model">my_note.my_note</field>
        <field name="arch" type="xml">
            <form string="Note" class="oe_form_nomargin o_note_form_view">
                <header>
                    <field name="stage_id" domain="[('user_id','=',uid)]" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <field name="tag_ids" widget="many2many_tags" placeholder="Tags" options="{'no_create_edit': True}"/>
                    <field name="memo" widget="html" class="oe_memo" editor_height="450px" />
                    <field name="value" />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="my_note.action_window">
      <field name="name">myNote window</field>
      <field name="res_model">my_note.my_note</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="my_note.action_server">
      <field name="name">myNote server</field>
      <field name="model_id" ref="model_my_note_my_note"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="myNote" id="my_note.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="my_note.menu_1" parent="my_note.menu_root"/>
    <menuitem name="Menu 2" id="my_note.menu_2" parent="my_note.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="my_note.menu_1_list" parent="my_note.menu_1"
              action="my_note.action_window"/>
    <menuitem name="Server to list" id="my_note" parent="my_note.menu_2"
              action="my_note.action_server"/>

</odoo>
